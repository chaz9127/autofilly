{
    "manifest_version": 3,
    "name": "Autofilly",
    "version": "1.0",
    "description": "At the click of a button, Autofilly will fill form inputs with random data or use your OpenAI api key for human readable values.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "action": {
      "default_popup": "index.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "128": "logo.png"
    },
    "host_permissions": [
      "*://api.openai.com/*"
    ]
  }